<MudTable Dense="true" UserAttributes="@Attributes" Items="@Repositories" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@IsLoading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Site</MudTh>
        <MudTh>Repo Name</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Html Url</MudTh>
        <MudTh>Git Url</MudTh>
        <MudTh>Is Private</MudTh>
        <MudTh>Visibility</MudTh>
        <MudTh>Is Template</MudTh>
        <MudTh>GitIgnore Template</MudTh>
        <MudTh>License Template</MudTh>
        <MudTh>Created Date Time</MudTh>
        <MudTh>Modified Date Time</MudTh>
        <MudTh>Auto Init</MudTh>
        <MudTh>Allow Auto Merge</MudTh>
        <MudTh>Allow Merge Commit</MudTh>
        <MudTh>Allow Rebase Merge</MudTh>
        <MudTh>Allow Squash Merge</MudTh>
        <MudTh>Delete Branch On Merge</MudTh>
        <MudTh>Use Squash PR Title as Default</MudTh>
        <MudTh>Has Downloads</MudTh>
        <MudTh>Has Issues</MudTh>
        <MudTh>Has Projects</MudTh>
        <MudTh>Has Wiki</MudTh>
        <MudTh>Home Page</MudTh>
        <MudTh>Team ID</MudTh>
        @if (ShowDeleteButton || ShowAddTemplateButton)
        {
            <MudTh></MudTh>
        }
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id"><MudLink Href="@($"/repository/{context.Id}")">@context.ExternalId</MudLink></MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        @if(context.SiteRepository != null)
        {
            <MudTd DataLabel="Site"><MudLink Href=@($"/sites/{context.SiteRepository.Id}")>@context.SiteRepository.Site.Name</MudLink></MudTd>
        }
        else
        {
            <MudTd DataLabel="Site">NULL</MudTd>
        }
        <MudTd DataLabel="RepoName">@context.RepoName</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudTd DataLabel="HtmlUrl"><MudLink Href="@context.HtmlUrl" Target="_blank">@context.HtmlUrl</MudLink></MudTd>
        <MudTd DataLabel="GitUrl">@context.GitUrl</MudTd>
        <MudTd DataLabel="IsPrivate"><BooleanIcon Value="@context.IsPrivate" /></MudTd>
        <MudTd DataLabel="Visibility">@context.Visibility</MudTd>
        <MudTd DataLabel="IsTemplate"><BooleanIcon Value="@context.IsTemplate" /></MudTd>
        <MudTd DataLabel="GitIgnoreTemplate">@(string.IsNullOrEmpty(context.GitIgnoreTemplate) ? "NULL" : context.GitIgnoreTemplate)</MudTd>
        <MudTd DataLabel="LicenseTemplate">@(string.IsNullOrEmpty(context.LicenseTemplate) ? "NULL" : context.LicenseTemplate)</MudTd>
        <MudTd DataLabel="CreatedDateTime">@context.CreatedDateTime</MudTd>
        <MudTd DataLabel="ModifiedDateTime">@context.ModifiedDateTime</MudTd>
        <MudTd DataLabel="AutoInit"><BooleanIcon Value="@context.AutoInit" /></MudTd>
        <MudTd DataLabel="AllowAutoMerge"><BooleanIcon Value="@context.AllowAutoMerge" /></MudTd>
        <MudTd DataLabel="AllowMergeCommit"><BooleanIcon Value="@context.AllowMergeCommit" /></MudTd>
        <MudTd DataLabel="AllowRebaseMerge"><BooleanIcon Value="@context.AllowRebaseMerge" /></MudTd>
        <MudTd DataLabel="AllowSquashMerge"><BooleanIcon Value="@context.AllowSquashMerge" /></MudTd>
        <MudTd DataLabel="DeleteBranchOnMerge"><BooleanIcon Value="@context.DeleteBranchOnMerge" /></MudTd>
        <MudTd DataLabel="UseSquashPrTitleAsDefault"><BooleanIcon Value="@context.UseSquashPrTitleAsDefault" /></MudTd>
        <MudTd DataLabel="HasDownloads"><BooleanIcon Value="@context.HasDownloads" /></MudTd>
        <MudTd DataLabel="HasIssues"><BooleanIcon Value="@context.HasIssues" /></MudTd>
        <MudTd DataLabel="HasProjects"><BooleanIcon Value="@context.HasProjects" /></MudTd>
        <MudTd DataLabel="HasWiki"><BooleanIcon Value="@context.HasWiki" /></MudTd>
        <MudTd DataLabel="Homepage">@context.Homepage</MudTd>
        <MudTd DataLabel="TeamId">@context.TeamId</MudTd>
            @if (ShowDeleteButton || ShowAddTemplateButton)
        {
            <MudTd>
                @if (ShowDeleteButton)
                {
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => OnDeleteRepoButtonClicked(context))">Delete</MudButton>
                }
                @if (ShowAddTemplateButton)
                {
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Disabled="@context.IsTemplate" OnClick="@(() => OnAddTemplateButtonClicked(context))">Add Template</MudButton>
                }
            </MudTd>
        }
    </RowTemplate>
</MudTable>