<MudTable UserAttributes="@Attributes" Items="@Repositories" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@IsLoading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>RepoName</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Url</MudTh>
        <MudTh>GitUrl</MudTh>
        <MudTh>IsPrivate</MudTh>
        <MudTh>Visibility</MudTh>
        <MudTh>IsTemplate</MudTh>
        <MudTh>GitIgnoreTemplate</MudTh>
        <MudTh>LicenseTemplate</MudTh>
        <MudTh>CreatedDateTime</MudTh>
        <MudTh>ModifiedDateTime</MudTh>
        <MudTh>AutoInit</MudTh>
        <MudTh>AllowAutoMerge</MudTh>
        <MudTh>AllowMergeCommit</MudTh>
        <MudTh>AllowRebaseMerge</MudTh>
        <MudTh>AllowSquashMerge</MudTh>
        <MudTh>DeleteBranchOnMerge</MudTh>
        <MudTh>UseSquashPrTitleAsDefault</MudTh>
        <MudTh>HasDownloads</MudTh>
        <MudTh>HasIssues</MudTh>
        <MudTh>HasProjects</MudTh>
        <MudTh>HasWiki</MudTh>
        <MudTh>Homepage</MudTh>
        <MudTh>TeamId</MudTh>
        @if (ShowConnectButton || ShowDeleteButton)
        {
            <MudTh></MudTh>
        }
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="IsConnected">@context.RepoName</MudTd>
        <MudTd DataLabel="IsConnected">@context.Description</MudTd>
        <MudTd DataLabel="IsConnected">@context.Url</MudTd>
        <MudTd DataLabel="IsConnected">@context.GitUrl</MudTd>
        <MudTd DataLabel="IsConnected">@context.IsPrivate</MudTd>
        <MudTd DataLabel="IsConnected">@context.Visibility</MudTd>
        <MudTd DataLabel="IsConnected">@context.IsTemplate</MudTd>
        <MudTd DataLabel="IsConnected">@context.GitIgnoreTemplate</MudTd>
        <MudTd DataLabel="IsConnected">@context.LicenseTemplate</MudTd>
        <MudTd DataLabel="IsConnected">@context.CreatedDateTime</MudTd>
        <MudTd DataLabel="IsConnected">@context.ModifiedDateTime</MudTd>
        <MudTd DataLabel="IsConnected">@context.AutoInit</MudTd>
        <MudTd DataLabel="IsConnected">@context.AllowAutoMerge</MudTd>
        <MudTd DataLabel="IsConnected">@context.AllowMergeCommit</MudTd>
        <MudTd DataLabel="IsConnected">@context.AllowRebaseMerge</MudTd>
        <MudTd DataLabel="IsConnected">@context.AllowSquashMerge</MudTd>
        <MudTd DataLabel="IsConnected">@context.DeleteBranchOnMerge</MudTd>
        <MudTd DataLabel="IsConnected">@context.UseSquashPrTitleAsDefault</MudTd>
        <MudTd DataLabel="IsConnected">@context.HasDownloads</MudTd>
        <MudTd DataLabel="IsConnected">@context.HasIssues</MudTd>
        <MudTd DataLabel="IsConnected">@context.HasProjects</MudTd>
        <MudTd DataLabel="IsConnected">@context.HasWiki</MudTd>
        <MudTd DataLabel="IsConnected">@context.Homepage</MudTd>
        <MudTd DataLabel="IsConnected">@context.TeamId</MudTd>
        @if (ShowConnectButton || ShowDeleteButton)
        {
            <MudTd>
                @if (ShowConnectButton)
                {
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => OnConnectRepoButtonClicked(context))">Connect</MudButton>
                }
                @if (ShowDeleteButton)
                {
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => OnDeleteRepoButtonClicked(context))">Delete</MudButton>
                }
            </MudTd>
        }
    </RowTemplate>
</MudTable>