<MudCard>
    <MudSelect T="RepositoryModel" Value="@_selectedRepo" Label="Repository" Clearable="false" AnchorOrigin="Origin.BottomCenter" ToStringFunc="@_repoSelectConverter" Required="true" ValueChanged="OnRepoSelected">
        @foreach (RepositoryModel repo in _repositories)
        {
            <MudSelectItem Value="@repo" />
        }
    </MudSelect>
    @if (_repositories.Any())
    {
        <MudText>Variables</MudText>
        <MudButton Variant="Variant.Filled" OnClick="OnCreateVariableButtonClick">Create Variable</MudButton>
        foreach(GithubSecret variable in _variables)
        {
            <MudText>@($"Name: {variable.Name}; CreatedAt: {variable.CreatedAt}; UpdatedAt: {variable.UpdatedAt}")</MudText>
        }
    }
    else
    {
        <MudText>Loading...</MudText>
    }
</MudCard>
