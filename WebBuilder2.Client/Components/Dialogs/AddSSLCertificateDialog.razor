@using Microsoft.AspNetCore.Components.Forms
@using WebBuilder2.Client.Components.Forms

<MudDialog>
    <DialogContent>
        <EditForm OnValidSubmit="@OnValidSubmit" Model="@_request">
            <DataAnnotationsValidator />
            <MudTextField T="string" Placeholder="@($"{Site?.Name ?? "Domain Name"}")" @bind-Value="_request.DomainName" For="(() => _request.DomainName)" Disabled="IsReadOnly" />
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled">Save</MudButton>
        </EditForm>
    </DialogContent>
</MudDialog>