<MudDialog>
    <DialogContent>
        @if(!_githubRepositories.Any())
        {
            <MudProgressCircular Size="Size.Large" Indeterminate="true" />
        }
        else
        {
            <MudList>
                @foreach (KeyValuePair<RepositoryModel, bool> repo in _githubRepositories)
                {
                    <MudListItem>
                        <MudCard>
                            <MudText>@($"Name: {repo.Key.Name}")</MudText>
                                <MudText>@($"Description: {repo.Key.Description}")</MudText>
                                <MudText>@($"Id: {repo.Key.Id}")</MudText>
                                <MudText>@($"Homepage: {repo.Key.Homepage}")</MudText>
                                <MudCheckBox T="bool" Checked="@repo.Value" CheckedChanged="@(() => OnCheckboxChecked(repo.Key))" />
                            </MudCard>
                        </MudListItem>
                }
            </MudList>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@OnImportBtnClick">Import</MudButton>
    </DialogActions>
</MudDialog>
