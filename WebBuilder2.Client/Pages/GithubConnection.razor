@page "/connections/github"

<div>
    <section class="gc-section">
        <MudText Class="gc-section-header">Repositories</MudText>
        <div class="gc-button-row">
            <MudButton Variant="Variant.Filled" OnClick="@OnCreateRepoBtnClick">Create Repository</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="@OnImportRepoBtnClick">Import Repository</MudButton>
        </div>
        <GithubRepoTable ValueChanged="@UpdateReposAsync" Repositories="@_githubRepositories" IsLoading="@_isTableLoading" ShowConnectButton="true" ShowDeleteButton="true" />
    </section>
    <MudDivider />
    <section>
        <MudText Class="gc-section-header">Templates</MudText>
        <GithubRepoTemplateView TemplateRepositories="@_templates" />
    </section>
</div>
